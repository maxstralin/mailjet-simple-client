<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>0.0.1-alpha4</Version>
    <Authors>Max Strålin</Authors>
    <Description>A simple, yet customisable, .NET standard client for interacting with Mailjet</Description>
    <RepositoryUrl>https://github.com/maxstralin/mailjet-simple-client</RepositoryUrl>
    <PackageProjectUrl>https://github.com/maxstralin/mailjet-simple-client</PackageProjectUrl>
    <PackageLicenceExpression>MIT</PackageLicenceExpression>
    <PackageTags>Mailjet;API;Email,Mail;SMS;Client;SDK</PackageTags>
    <PackageIconUrl>https://github.com/maxstralin/mailjet-simple-client/raw/master/assets/mailet_logo_64x64.png</PackageIconUrl>
    <Copyright>Max Strålin 2019</Copyright>
    <PackageId>Mailjet.SimpleClient</PackageId>
    <Title>Mailjet Simple Client</Title>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="LibLog" Version="5.0.6">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="1.1.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Mailjet.SimpleClient.Core\Mailjet.SimpleClient.Core.csproj" />
  </ItemGroup>

</Project>
